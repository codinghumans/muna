  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/chalk": "^2.2.0",
    "@types/cosmiconfig": "^6.0.0",
    "@types/fs-extra": "^9.0.2",
    "@types/node": "^14.14.2",
    "husky": "^4.3.0",
    "semantic-release": "^17.2.2",
    "typescript": "^4.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
