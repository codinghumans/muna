{
  "name": "@codinghumans/muna",
  "description": "Seamless file encryption with AWS KMS.",
  "homepage": "https://github.com/codinghumans/muna#readme",
  "author": "Marc Marcet Ribas",
  "license": "MIT",
  "main": "./bin/muna.js",
  "files": [
    "dist/*",
    "bin/muna.js"
  ],
  "bin": {
    "muna": "bin/muna.js"
